<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_common_item_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_major"
        >

        <cn.bingoogolapple.badgeview.BGABadgeFrameLayout
            android:id="@id/badge_view"
            android:layout_width="@dimen/business_image_width"
            android:layout_height="@dimen/business_image_height"
            android:padding="@dimen/spacing_minor"
            app:badge_gravity="rightTop"
            >

            <include layout="@layout/include_business_photo"
                />

        </cn.bingoogolapple.badgeview.BGABadgeFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_minor"
            android:layout_marginStart="@dimen/spacing_minor"
            android:orientation="vertical"
            >

            <TextView
                android:id="@id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="必胜宅急送（锦秋店）"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                />

            <TextView
                android:id="@id/txt_month_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="月售23份"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                />

            <TextView
                android:id="@id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="起送 ￥25  配送费 ￥1  平均45分钟"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider"
        />

</LinearLayout>