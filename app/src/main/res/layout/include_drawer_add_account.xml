<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_account"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_profile_height"
    android:background="?attr/colorAccent"
    android:padding="@dimen/spacing_major">

    <ImageView
        android:id="@+id/imageview_drawer_icon"
        android:layout_width="@dimen/drawer_account_avatar_width"
        android:layout_height="@dimen/drawer_account_avatar_width"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/imageview_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp"
        android:text="@string/label_login"
        android:textColor="?android:attr/textColorPrimaryInverse"
        style="@style/Widget.Drawer.AddAccount"/>

</FrameLayout>



